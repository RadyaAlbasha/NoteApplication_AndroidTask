<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/colorLite</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleWhiteGold">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/colorLite</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/fb_background</item>
        <item name="android:drawableLeft">@drawable/ic_facebook_logo</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AddNoteButton">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:drawableLeft">@drawable/ic_save</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
